# 使用官方 Golang 镜像作为构建环境
FROM golang:1.21-alpine AS builder

# 设置工作目录
WORKDIR /app

# 复制 go mod 文件
COPY go.mod go.sum* ./

# 下载依赖
RUN go mod download || true

# 复制源代码
COPY . .

# 构建应用
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o catiSip .

# 使用轻量级的 alpine 镜像作为运行环境
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# 从构建环境复制二进制文件
COPY --from=builder /app/catiSip .

# 暴露端口
EXPOSE 8080

# 运行应用
CMD ["./catiSip"]
